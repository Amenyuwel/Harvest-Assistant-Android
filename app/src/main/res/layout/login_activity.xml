<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/abs"
    tools:context=".Login">



    <androidx.cardview.widget.CardView
        android:id="@+id/cvLogin"
        android:layout_width="350dp"
        android:layout_height="600dp"
        android:alpha="0.9"
        app:cardBackgroundColor="@color/dirty_white"
        app:cardCornerRadius="17dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/harvest_icon"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="130dp"
            android:font="@font/ibmbold"
            android:text="Welcome"
            android:textSize="50dp"
            android:textStyle="bold" />

        <!--Input layout for etID editText Field-->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="70dp"
            android:paddingLeft="10dp">

            <!--User ID-->
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etID"
                android:layout_width="300dp"
                android:layout_height="65dp"
                android:drawableStart="@drawable/person"
                android:hint="RSBSA/Username" />

        </com.google.android.material.textfield.TextInputLayout>


        <!--Input layout for etPassword editText Field-->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:passwordToggleEnabled="true"
            android:paddingLeft="10dp">

            <!--Password-->
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPassword"
                android:layout_width="300dp"
                android:layout_height="65dp"
                android:drawableStart="@drawable/lock_icon"
                android:hint="PASSWORD"
                android:inputType="textPassword"/>


        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/btnLogin"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="70dp"
            android:backgroundTint="@color/darker_matcha"
            android:text="Log In"
            android:textColor="@color/white" />

        <View
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="40dp"
            android:background="#6B8C9A99" />

        <TextView
            android:id="@+id/tvBottomText0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:layout_marginTop="565dp"
            android:text="Don't have an account?"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="230dp"
            android:layout_marginTop="555dp"
            android:text="Sign Up"
            android:textColor="@color/blueBlack"
            android:textSize="15dp"
            android:textStyle="bold"
            android:background="@null"/>


    </androidx.cardview.widget.CardView>


</RelativeLayout>

