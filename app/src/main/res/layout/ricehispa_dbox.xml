<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="16dp">

    <!-- Image representing the pest -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/ricehispa"
        android:scaleType="fitXY" />

    <ImageButton
        android:id="@+id/ricebtn3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/back"
        android:background="@null"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:background="@drawable/cvgradient">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="Rice Hispa"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/ibmbold" />


        <TextView
            android:id="@+id/tv_intro"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv1"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="8dp"
            android:text="This beetle feeds on the leaves of rice plants, leaving a characteristic skeletal appearance by scraping the tissue off the leaf surface, reducing photosynthesis and weakening the plant."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/tv_intro"
            android:layout_marginTop="10dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Impact:"
                android:textSize="14dp"
                android:layout_marginStart="35dp"
                android:fontFamily="@font/imbmedium"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="•Main Target: Rice leaves and stems. Rice hispa larvae feed on leaf tissues, leading to leaf clipping and stem damage."
                android:textSize="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="60dp" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="•Rice hispa larvae feed on leaves and stems, causing leaf clipping and stem damage, which weakens the plant. This results in reduced grain formation and overall plant productivity."
                android:textSize="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="60dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/imbmedium"
                android:text="Recommended Insecticides:"
                android:textSize="14dp" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:textAlignment="center"
                android:text="•Lambda-Cyhalothrin\n•Chlorpyrifos\n•Diazinon\n•Quinalphos"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/imbmedium"
                android:text="Month Active:"
                android:textSize="14dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:textAlignment="center"
                android:text="-Common during the wet season, particularly from July to October."
                android:textSize="12dp" />



        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>
