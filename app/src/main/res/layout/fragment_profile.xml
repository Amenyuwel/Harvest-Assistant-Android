<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/matcha"
    tools:context=".ProfileFragment">



        <androidx.cardview.widget.CardView
            android:alpha="0.9"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:backgroundTint="@color/antique"
            app:cardCornerRadius="3dp"
            android:layout_alignParentBottom="true"/>




    <androidx.cardview.widget.CardView
        android:id="@+id/pfp_Acc_Settings"
        android:backgroundTint="@color/white"
        android:layout_width="350dp"
        android:layout_height="80dp"
        app:cardCornerRadius="16dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp">



        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/person" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginEnd="20dp"
            android:src="@drawable/next_nav" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="19dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/imbmedium"
            android:text="Account information"
            android:textColor="@color/blueBlack"
            android:textSize="20dp" />


    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/Change_Password"
        android:backgroundTint="@color/white"
        android:layout_width="350dp"
        android:layout_height="80dp"
        app:cardCornerRadius="16dp"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true">


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/change_password"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginEnd="20dp"
            android:src="@drawable/next_nav" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginRight="19dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/imbmedium"
            android:text="Change password"
            android:textColor="@color/blueBlack"
            android:textSize="20dp" />


    </androidx.cardview.widget.CardView>

</RelativeLayout>
