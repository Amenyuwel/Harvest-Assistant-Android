<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/abs_small"
    tools:context=".Login">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvLogin"
        android:layout_width="522dp"
        android:layout_height="305dp"
        android:layout_marginBottom="30dp"
        android:alpha="0.9"
        app:cardBackgroundColor="@color/dirty_white"
        app:cardCornerRadius="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <!--Input layout for etID editText Field-->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="70dp"
            android:paddingLeft="10dp">

            <!--User ID-->
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etID"
                android:layout_width="300dp"
                android:layout_height="65dp"
                android:layout_marginTop="15dp"
                android:drawableStart="@drawable/number_icon"
                android:hint="RSBSA" />

        </com.google.android.material.textfield.TextInputLayout>


        <!--Input layout for etPassword editText Field-->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            app:passwordToggleEnabled="true">

            <!--Password-->
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPassword"
                android:layout_width="300dp"
                android:layout_height="65dp"
                android:layout_marginTop="15dp"
                android:drawableStart="@drawable/lock_icon"
                android:hint="PASSWORD" />


        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/btnLogin"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="45dp"
            android:backgroundTint="@color/black"
            android:text="Log In"
            android:textColor="@color/white" />

        <View
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="40dp"
            android:background="#6B8C9A99" />

        <TextView
            android:id="@+id/forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/imbmedium"
            android:text="Forgot password? click here"
            android:textSize="15sp" />



    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>

