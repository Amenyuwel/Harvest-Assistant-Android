<resources>

    <!-- Updated AppTheme with Material Components -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:fontFamily">@font/opensans</item>
        <!-- Optional: Update status bar color if needed -->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- Dialog theme for Material Components dialogs -->
    <style name="DialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/black</item>
        <item name="android:fontFamily">@font/opensans</item>
    </style>

</resources>
